<% provide(:title, @team.name) %>

<h1><%= @team.name %></h1>

<div class="row">
  <div class="col col-md-4 offset-md-4">
    <% if @team.logo_url %>
    <p class="center"><%= image_tag(@team.logo_url, width: '160') %></p>
    <% end %>
    <p>League: <%= @team.league.name %> <span class="end"><%= link_to 'Details', @team.league %></span></p>
    <p>Country: <%= @team.league.country.name %></p>
    <h4><%= @team.name %>'s matches</h4>
    <ul>
      <% @matches.each do |m| %>
      <li>
        <%= link_to league_match_path(@team.league_id, m) do %>
        <%= m.home_team.name %> <%= m.home_goals.nil? ? "vs" : "#{m.home_goals} - #{m.away_goals}" %> <%= m.away_team.name %>
        | <%= m.match_date_time.strftime('%d/%m/%y') %>
        <% end %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
