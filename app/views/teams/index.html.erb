<% provide(:title, 'Teams') %>

<h1>Teams</h1>

<div class="row">
<% @teams.each do |team| %>
<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="card" style="margin-bottom:24px;">
    <div class="card-body">
      <h6><%= link_to team.name, team_path(team) %></h6>
      <p><%= team.league.name %></p>
    </div>
  </div>
</div>
<% end %>
</div>