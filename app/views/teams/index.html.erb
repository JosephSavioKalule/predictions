<% provide(:title, 'Teams') %>

<h1>Teams</h1>

<div class="row">
<% @teams.each do |team| %>
<div class="col-sm-6 col-md-4 col-lg-3">
  <div class="card" style="margin-bottom:24px;">
    <div class="card-body row">
      <div class="col-10">
        <h6><%= link_to team.name, team_path(team) %></h6>
        <p><%= team.league.name %></p>
      </div>
      <div class="col-2">
        <% if team.logo_url %>
        <%= image_tag(team.logo_url, height: '42', style:'float:right;margin:0.1em') %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
