<% provide(:title, 'Settings') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    
    <h2>Account Settings</h2>
    
    <%= form_for @settings, :url => user_settings_box_path(@user) do |f| %>
    
    <div class="card bg-light">
      <div class="card-body">
        <h4 class="card-title">
          Receive reminders by email:
        </h4>
        <p class="card-text">
          <span>
            <%= f.check_box :receive_email, checked: @settings.receive_email? %>
            Check in order to receive reminders by email
          </span>
        </p>
      </div>
    </div>
    <br>
    <%= f.submit "Save changes", class: "btn btn-outline-success" %>
    <% end %>
    <hr>
    
    <div class="card border-danger">
      <div class="card-body">
        
        <h4 class="card-title">Delete your account</h4>
        
        <p>Careful! This action cannot be undone. If you're 100% sure, please
        provide your password and click on the "Delete Account" button</p>
        
        <%= form_for(:user, url: profile_delete_path) do |f| %>

          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>

          <%= f.submit "Delete Account", class: "btn btn-outline-danger", data: { confirm: 'Are you sure?' } %>
        <% end %>
      </div>
    </div>
    
    <br>
    
    <p>
      <%= link_to 'Cancel', profile_path, class: 'btn btn-outline-dark' %>
    </p>
    
  </div>
</div>